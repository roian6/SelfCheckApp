<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:ambientShadowAlpha">0.05</item>
        <item name="android:spotShadowAlpha">0.05</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:fontFamily">@font/apple_sd_gothic_neo_h</item>
        <item name="android:textColor">@color/materialGray7</item>
    </style>

</resources>
